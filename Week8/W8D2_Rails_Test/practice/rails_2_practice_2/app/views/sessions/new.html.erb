<h1>Sign In</h1>

<form action="<%= session_url %>" method = "Post">
    <input type="hidden" 
    name= "authenticity_token" 
    value="<%= form_authenticity_token%>"/>

    <label>Username
        <input name="user[username]"/>
    </label>
    <label>Password
        <input type="password" name="user[password]"/>
    </label>
    <button>Sign In</button>
</form>