<!DOCTYPE html>
<html>
  <head>
    <title>Poetry App</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if flash[:errors] %>
      <%= flash[:errors].join(", ") %>
      <% end %>

      <% if signed_in? %>
          <button>Sign Out</button>
        <%end%>
    <%= yield %>
  </body>
</html>
